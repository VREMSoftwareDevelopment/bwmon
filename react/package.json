{
    "name": "bwmon",
    "description": "Bandwidth Monitor",
    "version": "3.1.3",
    "homepage": "/bwmon/",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --maxWorkers=25%",
        "test:once": "react-scripts test --watchAll=false --maxWorkers=25%",
        "test:coverage": "react-scripts test --watchAll=false --coverage --maxWorkers=25%",
        "test:CI": "react-scripts test --watchAll=false --coverage --runInBand",
        "test:e2e": "npx playwright test",
        "eject": "react-scripts eject",
        "pretty": "prettier --write \"src/**/*.{js,jsx,json}\"",
        "audit": "better-npm-audit audit -p -l high",
        "lint": "eslint \"src/**/*.{js,jsx}\""
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^6.3.0",
        "@mui/lab": "^6.0.0-beta.21",
        "@mui/material": "^6.3.0",
        "@mui/styles": "^6.3.0",
        "apexcharts": "^4.3.0",
        "history": "^5.3.0",
        "luxon": "^3.5.0",
        "react": "^18.3.1",
        "react-apexcharts": "^1.7.0",
        "react-dom": "^18.3.1",
        "react-error-boundary": "^5.0.0",
        "react-router-dom": "^6.28.1"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@eslint/compat": "^1.2.4",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.17.0",
        "@playwright/test": "^1.49.1",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.10.2",
        "better-npm-audit": "^3.11.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.10.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^3.4.2",
        "pretty-quick": "^4.0.0",
        "react-scripts": "^5.0.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "printWidth": 132,
        "tabWidth": 4,
        "singleQuote": true,
        "endOfLine": "auto"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.jsx",
            "!src/serviceWorker.js",
            "!**/e2e/**",
            "!**/__mocks__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 99,
                "functions": 93,
                "lines": 99,
                "statements": 97
            }
        }
    }
}
