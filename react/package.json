{
    "name": "bwmon",
    "description": "Bandwidth Monitor",
    "version": "3.0.6",
    "homepage": "/bwmon/",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.60",
        "apexcharts": "^3.33.0",
        "history": "^5.2.0",
        "luxon": "^2.3.0",
        "react": "^17.0.2",
        "react-apexcharts": "^1.3.9",
        "react-dom": "^17.0.2",
        "react-router-dom": "^6.2.1",
        "react-scripts": "^5.0.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --maxWorkers=25%",
        "testonce": "react-scripts test --watchAll=false --maxWorkers=50%",
        "coverage": "react-scripts test --watchAll=false --coverage --maxWorkers=50%",
        "eject": "react-scripts eject",
        "pretty": "./node_modules/.bin/prettier --write \"./**/*.{js,jsx,json}\"",
        "audit": "better-npm-audit audit -p -l high"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.2",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
        "better-npm-audit": "^3.5.1",
        "enzyme": "^3.11.0",
        "enzyme-to-json": "^3.6.2",
        "husky": "^7.0.4",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.3",
        "puppeteer": "^13.1.3",
        "react-test-renderer": "^17.0.2"
    },
    "prettier": {
        "trailingComma": "es5",
        "printWidth": 132,
        "tabWidth": 4,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/serviceWorker.js",
            "!**/__test__/**",
            "!**/__snapshots__/**",
            "!**/__mocks__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 87,
                "functions": 85,
                "lines": 95,
                "statements": 92
            }
        }
    }
}
