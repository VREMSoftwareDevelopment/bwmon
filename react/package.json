{
    "name": "bwmon",
    "description": "Bandwidth Monitor",
    "version": "3.1.0",
    "homepage": "/bwmon/",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@mui/icons-material": "^5.14.16",
        "@mui/lab": "^5.0.0-alpha.128",
        "@mui/material": "^5.14.16",
        "apexcharts": "^3.44.0",
        "history": "^5.3.0",
        "luxon": "^3.4.3",
        "mui-styles": "^1.0.3",
        "react": "^18.2.0",
        "react-apexcharts": "^1.4.1",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^4.0.11",
        "react-router-dom": "^6.18.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --maxWorkers=25%",
        "test:once": "react-scripts test --watchAll=false --maxWorkers=25%",
        "test:coverage": "react-scripts test --watchAll=false --coverage --maxWorkers=25%",
        "test:CI": "react-scripts test --watchAll=false --coverage --runInBand",
        "test:e2e": "react-scripts test --testPathPattern='./*\\e2e\\.test\\.js$' --maxWorkers=25%",
        "eject": "react-scripts eject",
        "pretty": "prettier --write \"src/**/*.{js,jsx,json}\"",
        "audit": "better-npm-audit audit -p -l high"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.5.1",
        "better-npm-audit": "^3.7.3",
        "husky": "^8.0.3",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^3.0.3",
        "pretty-quick": "^3.1.3",
        "puppeteer-chromium-resolver": "^20.0.0",
        "react-scripts": "^5.0.1",
        "react-test-renderer": "^18.2.0"
    },
    "prettier": {
        "trailingComma": "es5",
        "printWidth": 132,
        "tabWidth": 4,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/serviceWorker.js",
            "!**/__test__/**",
            "!**/__snapshots__/**",
            "!**/__mocks__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 89.6,
                "functions": 85.7,
                "lines": 95.8,
                "statements": 93.7
            }
        }
    }
}
