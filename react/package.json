{
    "name": "bwmon",
    "description": "Bandwidth Monitor",
    "version": "3.1.2",
    "homepage": "/bwmon/",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.13.0",
        "@mui/icons-material": "^6.1.3",
        "@mui/lab": "^6.0.0-beta.11",
        "@mui/material": "^6.1.3",
        "apexcharts": "^3.54.0",
        "history": "^5.3.0",
        "luxon": "^3.5.0",
        "mui-styles": "^2.0.6",
        "react": "^18.3.1",
        "react-apexcharts": "^1.4.1",
        "react-dom": "^18.3.1",
        "react-error-boundary": "^4.0.13",
        "react-router-dom": "^6.27.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --maxWorkers=25%",
        "test:once": "react-scripts test --watchAll=false --maxWorkers=25%",
        "test:coverage": "react-scripts test --watchAll=false --coverage --maxWorkers=25%",
        "test:CI": "react-scripts test --watchAll=false --coverage --runInBand",
        "test:e2e": "npx playwright test",
        "eject": "react-scripts eject",
        "pretty": "prettier --write \"src/**/*.{js,jsx,json}\"",
        "audit": "better-npm-audit audit -p -l high"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@playwright/test": "^1.48.0",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.7.5",
        "better-npm-audit": "^3.11.0",
        "husky": "^9.1.6",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^3.3.3",
        "pretty-quick": "^4.0.0",
        "react-scripts": "^5.0.1",
        "react-test-renderer": "^18.3.1"
    },
    "prettier": {
        "trailingComma": "es5",
        "printWidth": 132,
        "tabWidth": 4,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/serviceWorker.js",
            "!**/e2e/**",
            "!**/__test__/**",
            "!**/__snapshots__/**",
            "!**/__mocks__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 89.6,
                "functions": 85.7,
                "lines": 95.8,
                "statements": 93.7
            }
        }
    }
}
