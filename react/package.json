{
    "name": "bwmon",
    "description": "Bandwidth Monitor",
    "version": "3.0.6",
    "homepage": "/bwmon/",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.12.4",
        "@material-ui/icons": "^4.11.3",
        "@material-ui/lab": "^4.0.0-alpha.60",
        "apexcharts": "^3.35.2",
        "history": "^5.3.0",
        "luxon": "^2.4.0",
        "react": "^17.0.2",
        "react-apexcharts": "^1.4.0",
        "react-dom": "^17.0.2",
        "react-error-boundary": "^3.1.4",
        "react-router-dom": "^6.3.0",
        "react-scripts": "^5.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --maxWorkers=25%",
        "testonce": "react-scripts test --watchAll=false --maxWorkers=50%",
        "coverage": "react-scripts test --watchAll=false --coverage --maxWorkers=50%",
        "eject": "react-scripts eject",
        "pretty": "./node_modules/.bin/prettier --write \"./**/*.{js,jsx,json}\"",
        "audit": "better-npm-audit audit -p -l high"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^12.1.5",
        "@testing-library/react-hooks": "^8.0.0",
        "@testing-library/user-event": "^14.2.0",
        "better-npm-audit": "^3.7.3",
        "husky": "^8.0.1",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "puppeteer": "^14.1.0",
        "react-test-renderer": "^17.0.2"
    },
    "prettier": {
        "trailingComma": "es5",
        "printWidth": 132,
        "tabWidth": 4,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/serviceWorker.js",
            "!**/__test__/**",
            "!**/__snapshots__/**",
            "!**/__mocks__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 89.8,
                "functions": 85.7,
                "lines": 95.8,
                "statements": 93.7
            }
        }
    }
}
